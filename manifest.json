{
    "name": "WheelChair Rx",
    "short_name": "WCRX",
    "description": "Interactive wheelchair fitting application",
    "version": "1.0",
    "manifest_version": 2,
    "offline_enabled": true,
    "icons": {
        "128": "images/app/wcrx-icon.png"
    },
    "permissions": [
        "fullscreen",
        "videoCapture",
        { "fileSystem": [] }
        ],
    "app": {
        "background": {
            "scripts": ["js/background.js"]
        }
    }
}
